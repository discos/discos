        whenSet="3,3,3,3,3,3,3"
        whenCleared="0,0,0,0,0,0,0"
        archive_priority="1"
        archive_min_int="1"
        archive_max_int="1"
        archive_delta="1"
	/>
    -->

              
</MinorServoBoss>
