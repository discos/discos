<!-- ASACTIVE means the active sufrace is enabled and changing with the elevation,
     otherwise the code without the ASACTIVE suffice is the configuration with
     no active sufrace enabled.
-->
<!-- The order of axises of every minor servo have to be the same as MSCU one.
     Legend:
       * TX means translation in X
       * RX means rotation in X

     Given a setup code , if we have the following values: (C0, C1, C2), the axis value will be:

         C0 + C1*E + C2*E^2 

     Let's suppose the PFP LX  is (2.222, 1.111, 0), we'll have the following value for
     the PFP x axis:
         
         x = 2.222 + 1.111*E + 0*E
     
     PS. The rotation unit is sec, not arc sec.
-->
<!-- The action order must be: park; active servos; none -->
<MinorServoBoss
    xmlns="urn:schemas-cosylab-com:MinorServo:1.0" 
    xmlns:baci="urn:schemas-cosylab-com:BACI:1.0"
    xmlns:cdb="urn:schemas-cosylab-com:CDB:1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    actionThreadStackSize="2048"
    monitoringThreadStackSize="4096"
    
    CCB_ASACTIVE="
        @ PFP: park;
        @ GFR: park;
        @ SRP: TX = (0); 
               TY = (29.8166666666665, 0.263472663139432, -0.018206701940039, 0.000072373113855); 
               TZ = (-6.37463319147492, 0.169826241751738, -0.000419997047419, -0.000003985237184);
               RX = (-0.03222222222222361, 0.00014822163433269445, 0.000027586713698, -0.000000077732053);
               RY = (0); 
               RZ = (0);
        @ M3R: RZ = (286.67);
    "
    CCB="
        @ PFP: park;
        @ GFR: park;
        @ SRP: TX(mm) = (0); 
               TY(mm) = (28.51685221927284, -0.002707044952, -0.009870218853, 0.000031617958);
               TZ(mm) = (-6.320734263537185, 0.169826241752, -0.000419997047, -0.000003985237);
               RX(degree) = (-0.03805919380904152, -0.0001426193499425, 0.000039508844799, -0.000000131010010); 
               RY(degree) = (0); 
               RZ(degree) = (0);
        @ M3R: RZ(mm) = (286.67);
    "

    KKG_ASACTIVE="
        @ PFP: park;
        @ SRP: TX(mm) = (0); 
               TY(mm) = (29.8166666666665, 0.263472663139432, -0.018206701940039, 0.000072373113855);
               TZ(mm) = (-6.37463319147492, 0.169826241751738, -0.000419997047419, -0.000003985237184);
               RX(degree) = (-0.03805919380904152, -0.0001426193499425, 0.000039508844799, -0.000000131010010); 
               RY(degree) = (0); 
               RZ(degree) = (0);
        @ GFR: RZ(mm) = (1323.5);
        @ M3R: none;
    "
    KKG="
        @ PFP: park;
        @ SRP: TX(mm) = (0); 
               TY(mm) = (28.51685221927284, -0.002707044952, -0.009870218853, 0.000031617958);
               TZ(mm) = (-6.320734263537185, 0.169826241752, -0.000419997047, -0.000003985237);
               RX(degree) = (-0.061286707040614161, -0.0001426193499425, 0.000039508844799, -0.000000131010010); 
               RY(degree) = (0); 
               RZ(degree) = (0);
        @ GFR: RZ(mm) = (1323.5);
        @ M3R: none;
    "

    LLP="
        @ SRP: park;
        @ PFP: RY(mm) = (-25.75); TX(mm) = (458); TZ(mm)= (-46.2);
        @ GFR: none; 
        @ M3R: none;
    "
    PPP="
        @ SRP: park;
        @ PFP: RY(mm) = (-25.75); TX(mm) = (458); TZ(mm) = (-45.9);
        @ GFR: none; 
        @ M3R: none;
    "
    PLP="
        @ SRP: park;
        @ PFP: RY(mm) = (-25.75); TX(mm) = (458); TZ(mm) = (-45.9);
        @ GFR: none; 
        @ M3R: none;
    "

    slaves="GFR, M3R, PFP, SRP"
>
