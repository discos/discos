<SRTMount xmlns="urn:schemas-cosylab-com:SRTMount:1.0" 
               xmlns:baci="urn:schemas-cosylab-com:BACI:1.0"
               xmlns:cdb="urn:schemas-cosylab-com:CDB:1.0"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		ACUIPAddress="192.168.150.135"
		CommandPort="8000"
		StatusPort="8001"
		StowTimeout="360000000"
		UnStowTimeout="30000000"
		WatchDogThreadPeriod="500000"
		RepetitionCacheTime="7000000"
		RepetitionExpireTime="10000000"
		StatusSocketTimeout="250000"
		StatusSocketDutyCycle="30000"
		ControlSocketResponseTime="1000000"
		ControlSocketDutyCycle="30000"
		TimeSource="EXT">
	               
	<azimuth description="Azimuth drive position" 
	         units="degree"
	         graph_min="-90"
	         graph_max="450"
	/>
	<elevation description="Elevation drive position"
	           units="degree"
	           graph_min="0"
	           graph_max="90"
	/>
	<azimuthError description="Azimuth position error"
	              units="degree"
	              graph_min="0"
	              graph_max="360"
	/>
	<elevationError description="Elevation position error"
	                units="degree"
	                graph_min="0"
	                graph_max="90"
	/>
	<azimuthTrackingError description="Servo system tracking error in azimuth" />
	<elevationTrackingError description="Servo system tracking error in elevation" />
	<azimuthMode description="Azimuth Mode" />
	<elevationMode description="Elevation Mode" />
	<time description="ACU current time"/>
	<controlLineStatus description="The status of the component with respect to the control socket" />
	<statusLineStatus description="The status of the component with respect to the status socket" />
	<programTrackPositions description="Number of loaded time tagged program track points" />
	<section description="Section of the antenna travel range" />
	<azimuthRate description="Azimuth rate"
	             units="degree/sec"
	             graph_min="-0.8"
	             graph_max="0.8"
	/>
	<elevationRate description="Elevation rate"
	               units="degree/sec"
	               graph_min="-0.5"
	               graph_max="0.5"
	/>
	<azimuthOffset description="Position offset in azimuth" />
	<elevationOffset description="Position offset in elevation"	/>
	<deltaTime description="Time offset" />
	<commandedAzimuth description="Last commanded azimuth position" />
	<commandedElevation description="Last commanded elevation position" />
	<mountStatus description="The status of the mount" />
	
	<commandedAzimuthRate/>
	<commandedElevationRate/>
	<commandedAzimuthOffset/>
	<commandedElevationOffset/>
