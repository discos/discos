<!-- The order of axises of every minor servo have to be the same as MSCU one -->
<!-- 
     For instance if we have the following values: (C0, C1, C2), the axis value will be:

         C0 + C1*E + C2*E^2 

     Let's suppose the PFP LX  is (2.222, 1.111, 0), we'll have the following value for
     the PFP x axis:
         
         x = 2.222 + 1.111*E + 0*E
     
     The rotation unit is sec, not arc sec.
-->
<!-- The action order must be: park; active servos; none -->
<MinorServoBoss
    xmlns="urn:schemas-cosylab-com:MinorServo:1.0" 
    xmlns:baci="urn:schemas-cosylab-com:BACI:1.0"
    xmlns:cdb="urn:schemas-cosylab-com:CDB:1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    actionThreadStackSize="2048"
    monitoringThreadStackSize="4096"
    
    CCB="
        @ PFP: park;
        @ GFR: park;
        @ SRP: LX = (0); 
               LY = (29.8166666666665, 0.263472663139432, -0.018206701940039, 0.000072373113855)); 
               LZ = (-6.37463319147492, 0.169826241751738, -0.000419997047419, -0.000003985237184)
               TX = (-0.03222222222222361, 0.00014822163433269445, 0.000027586713698, -0.000000077732053)
               TY = (0); 
               TZ = (0);
        @ M3R: LZ = (286.67);
    "
    KKG="
        @ PFP: park;
        @ SRP: LX = (0); 
               LY = (29.8166666666665, 0.263472663139432, -0.018206701940039, 0.000072373113855)); 
               LZ = (-6.37463319147492, 0.169826241751738, -0.000419997047419, -0.000003985237184)
               TX = (-0.03222222222222361, 0.00014822163433269445, 0.000027586713698, -0.000000077732053)
               TY = (0); 
               TZ = (0);
        @ GFR: LZ = (1323.5);
        @ M3R: none;
    "
    LLP="
        @ SRP: park;
        @ PFP: TY = (-25.75); LX = (458); LZ = (-46.2);
        @ GFR: none; 
        @ M3R: none;
    "
    PPP="
        @ SRP: park;
        @ PFP: TY = (-25.75); LX = (458); LZ = (-45.9);
